<h1>Taco Time!</h1>
<img src="assets/img/burger.png" class="burger">

<div class="container">
  <div class="devour">
    <h2>Tacos that need to be eaten!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured">
    <h2>Tacos that are devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>


<div class="container2">
  <h2>Add a Taco</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Taco Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Needs to be eaten
    </div>

    <button type="submit">Add Taco</button>
  </form>
</div>
</div>
